# Shopify Integration Configuration
# Set FEATURE_SHOPIFY=true to enable Shopify integration

# Feature Flag
FEATURE_SHOPIFY=false

# Shopify API Credentials (Server-side only)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting
SHOPIFY_RATE_LIMIT_REQUESTS=10
SHOPIFY_RATE_LIMIT_WINDOW_MS=60000

# Image Processing
SHOPIFY_MAX_IMAGE_SIZE_MB=5
SHOPIFY_IMAGE_STORAGE_BUCKET=shopify_images

# Job Processing
SHOPIFY_JOB_TIMEOUT_MS=300000
SHOPIFY_MAX_RETRY_ATTEMPTS=5

# Security
SHOPIFY_ENCRYPTION_KEY=your_encryption_key_for_tokens
